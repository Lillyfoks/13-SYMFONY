{% extends 'base.html.twig' %}

{% block body %}
	<h1>Votre panier</h1>
	{% if items | length >0 %}
		<form action="{{ path('app_order') }}">
			<table>
				<thead>
					<tr>
						<th>Produit</th>
						<th>Prix</th>
						<th>Quantité</th>
						<th>Total</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>{{item.product.name}}</td>
							<td>{{item.product.price}}€</td>
							<td>{{item.quantity}}</td>
							<td>{{item.product.price * item.quantity}}€</td>
							<td>
								<a href="{{ path ('app_cart_remove', {id:item.product.id}) }}" class="btn btn-danger btn-sm">
									<i class="fas fa-trash"></i>
								</td>
							</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3" class="text-right">Total :</td>
						<td>{{total}}€</td>
						<td></td>
					</tr>
				</tfoot>
			</table>
		{% else %}
			<p>Votre Panier est vide</p>
		{% endif %}

		<button type="submit">Valider mon panier</button>
	</form>
{% endblock %}
