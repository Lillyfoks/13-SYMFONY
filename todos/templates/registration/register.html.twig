{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Register'|trans }}
{% endblock %}

{% block body %}
	<nav>
		<a href="{{ path('app_home') }}">{{ 'Back'|trans }}</a>
	</nav>
    <h1>{{ 'Register'|trans }}</h1>
	{{ form_errors(registrationForm) }}

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.brochure) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.lastName) }}
	{{ form_row(registrationForm.firstName) }}
	{{ form_row(registrationForm.birthdate) }}
	{{ form_row(registrationForm.username) }}
	{{ form_row(registrationForm.password.first) }}
	{{ form_row(registrationForm.password.second, {'label': 'Repeat'|trans}) }}
	{{ form_row(registrationForm.agreeTerms, {'label': 'Agree'|trans}) }}

	<button type="submit" class="btn">{{ 'Register'|trans }}</button>
	{{ form_end(registrationForm) }}


{% endblock %}
